{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ChronoTypes",
  "type": "object",
  "required": [
    "date_time",
    "naive_date",
    "naive_date_time",
    "naive_time",
    "weekday"
  ],
  "properties": {
    "date_time": {
      "type": "string",
      "format": "date-time"
    },
    "naive_date": {
      "type": "string",
      "format": "date"
    },
    "naive_date_time": {
      "type": "string",
      "format": "partial-date-time"
    },
    "naive_time": {
      "type": "string",
      "format": "partial-date-time"
    },
    "weekday": {
      "type": "string",
      "enum": [
        "Mon",
        "Tue",
        "Wed",
        "Thu",
        "Fri",
        "Sat",
        "Sun"
      ]
    }
  }
}